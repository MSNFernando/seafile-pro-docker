# --- Admin config ---
SEAFILE_SERVER_HOSTNAME=files.example.com
SEAFILE_ADMIN_EMAIL=admin@example.com
SEAFILE_ADMIN_PASSWORD=ChangeMe123

# --- MySQL password (used in compose file) ---
DB_ROOT_PASS=db_root_pass

# --- S3-compatible MinIO backend ---
USE_S3_STORAGE=true
SEAFILE_CONF_IN_S3=false

AWS_ACCESS_KEY_ID=minio-access-key
AWS_SECRET_ACCESS_KEY=minio-secret-key

S3_ENDPOINT=192.168.1.124:9000
S3_USE_HTTPS=false
S3_VERIFY_CERT=false
S3_REGION=us-east-1
S3_ADDRESSING_STYLE=path
S3_BUCKET=seafile-data
S3_STORAGE_CLASS=STANDARD
S3_MULTIPART_THRESHOLD=20
S3_UPLOAD_CHUNK_SIZE=10
